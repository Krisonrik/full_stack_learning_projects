<%- include("partials/header"); %>

<h1>Home</h1>

<p><%= content %></p>

<% for(let key in posts){ %>
<h1> <%= posts[key].title %> </h1>
<% let dirName = "/post/"+ key; %>
<% let post = posts[key].content %>
<div>
    <% if(post.length > 100){ %>
    <% let displayText = post.substr(0,100); %>
    <p><%= displayText+"... " %><a href=<%= dirName %>>read more</a></p>
    <% }else{ %>
    <p><%= post %></p>
    <% } %>
</div>
<% } %>

<%- include("partials/footer"); %>